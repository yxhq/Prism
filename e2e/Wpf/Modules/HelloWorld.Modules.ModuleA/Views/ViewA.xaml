<UserControl x:Class="HelloWorld.Modules.ModuleA.Views.ViewA"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <TextBlock Text="{Binding Message}" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center" />
    <Button Grid.Row="1" Content="Show Dialog" Command="{Binding ShowDialogCommand}" />
  </Grid>
</UserControl>
